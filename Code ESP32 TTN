#include <Arduino.h>
#include <lmic.h>        // Stack LoRaWAN LMIC
#include <hal/hal.h>     // HAL matÃ©riel pour LMIC
#include <SPI.h>         // Communication SPI avec le module LoRa

#define TX_INTERVAL 30  // Intervalle dâ€™envoi en secondes

// === ClÃ©s LoRaWAN (ABP) pour TTN ===
static u1_t NWKSKEY[16] = {
  0x4E, 0xFA, 0x9D, 0xE8, 0x27, 0xA4, 0xAB, 0xE6, 0x9E, 0x81, 0xEC, 0x21, 0xE4, 0x22, 0x0C, 0xC8
};

static u1_t APPSKEY[16] = {
  0x9B, 0x9A, 0x2B, 0xEA, 0x24, 0x67, 0x59, 0xBC, 0xAA, 0x23, 0x72, 0x01, 0x65, 0xE6, 0xEA, 0xC6
};

static const u4_t DEVADDR = 0x260BE69B; // Adresse du device TTN (format Big Endian)

// === Configuration des broches (ESP32 vers RFM95W) ===
const lmic_pinmap lmic_pins = {
  .nss = 0,                         // Broche NSS (SPI)
  .rxtx = LMIC_UNUSED_PIN,
  .rst = 14,                        // Broche Reset
  .dio = {2, 32, LMIC_UNUSED_PIN}  // DIO0 = 2, DIO1 = 32
};

// === Variables de simulation ===
int value = 0;                      // Valeur incrÃ©mentÃ©e Ã  chaque cycle
bool flag = false;                 // BoolÃ©en inversÃ© Ã  chaque cycle
unsigned long lastUpdateTime = 0;  // Timestamp du dernier update

osjob_t sendjob;                   // Job dâ€™envoi LoRaWAN (utilisÃ© par LMIC)

// === DÃ©claration des fonctions obligatoires mais inutilisÃ©es pour ABP ===
void os_getArtEui(u1_t* buf) {}
void os_getDevEui(u1_t* buf) {}
void os_getDevKey(u1_t* buf) {}

// === Callback appelÃ© sur chaque Ã©vÃ©nement LoRaWAN (ex: envoi fini) ===
void onEvent(ev_t ev) {
  Serial.print(F("[LMIC] Ã‰vÃ©nement : "));
  Serial.println(ev);

  switch (ev) {
    case EV_TXCOMPLETE:
      Serial.println(F("âœ… Uplink terminÃ©."));
      // Planifie le prochain envoi aprÃ¨s TX_INTERVAL
      os_setTimedCallback(&sendjob, os_getTime() + sec2osticks(TX_INTERVAL), do_send);
      break;

    case EV_TXCANCELED:
      Serial.println(F("âš ï¸ Envoi annulÃ©."));
      break;

    default:
      break; // Ignorer les autres Ã©vÃ©nements ici
  }
}

// === Fonction d'envoi LoRa ===
void do_send(osjob_t* j) {
  if (LMIC.opmode & OP_TXRXPEND) {
    Serial.println(F("â³ Envoi dÃ©jÃ  en cours..."));
  } else {
    const char* message = "EPHEC_Lora"; // Message texte Ã  envoyer

    // CrÃ©ation du payload (3 donnÃ©es + texte)
    uint8_t payload[7 + strlen(message)];
    uint8_t i = 0;

    // Encodage des donnÃ©es dans le payload
    payload[i++] = (value >> 8) & 0xFF;          // Byte haut de value
    payload[i++] = value & 0xFF;                 // Byte bas de value
    payload[i++] = flag ? 1 : 0;                 // BoolÃ©en flag (1 ou 0)
    payload[i++] = strlen(message);              // Longueur du texte
    memcpy(&payload[i], message, strlen(message)); // Copie du message dans le payload
    i += strlen(message);

    Serial.print(F("â†’ Envoi sur freq (Hz): "));
    Serial.println(LMIC.freq); // Affiche la frÃ©quence LoRa utilisÃ©e
    LMIC_setTxData2(1, payload, i, 0); // Envoi sur port 1, pas dâ€™ACK
    Serial.println(F("â†’ Transmission en cours..."));
  }
}

// === Initialisation de la carte et de LoRaWAN ===
void setup() {
  Serial.begin(115200);
  delay(3000); // Attente pour stabilitÃ© au dÃ©marrage
  Serial.println(F("ðŸš€ DÃ©marrage LoRaWAN ABP - Canal unique 868.1 MHz"));

  os_init();     // Initialise la stack LMIC
  LMIC_reset();  // RÃ©initialise les Ã©tats internes

  // Configuration ABP (activation directe sans join)
  LMIC_setSession(0x1, DEVADDR, NWKSKEY, APPSKEY);

  // DÃ©sactive tous les canaux sauf le canal 0 (868.1 MHz)
  for (int i = 1; i < 9; i++) {
    LMIC_disableChannel(i);
  }
  LMIC_enableChannel(0);

  // Configuration : Spreading Factor SF7, puissance 14dBm
  LMIC_setDrTxpow(DR_SF7, 14);
  LMIC.dn2Dr = DR_SF9; // ParamÃ¨tre RX2

  // Premier envoi immÃ©diat
  do_send(&sendjob);
}

// === Boucle principale (doit tourner en permanence) ===
void loop() {
  os_runloop_once(); // GÃ¨re les Ã©vÃ©nements LoRa (envoi, rÃ©ception, etc.)

  // Mise Ã  jour des donnÃ©es toutes les 30 secondes
  if (millis() - lastUpdateTime >= 30000) {
    value++;               // IncrÃ©mente la valeur simulÃ©e
    flag = !flag;          // Inverse le boolÃ©en
    lastUpdateTime = millis();

    // Affichage des nouvelles valeurs en console
    Serial.print(F("ðŸ†• Nouvelle valeur de value : "));
    Serial.print(value);
    Serial.print(F(" | Nouveau flag : "));
    Serial.println(flag ? "true" : "false");
  }
}
